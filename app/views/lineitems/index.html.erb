<h1>Listing Line Items</h1>

<table class="table">
  <tr>
    <th>Account</th>
    <th>Amount</th>
    <th>Section</th>
    <th>Order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lineitems.each do |lineitem| %>
  <tr>
    <td><%= lineitem.account %></td>
    <td><%= lineitem.amount %></td>
    <td><%= lineitem.section %></td>
    <td><%= lineitem.order %></td>
    <td><%= link_to 'Show', lineitem %></td>
    <td><%= link_to 'Edit', edit_lineitem_path(lineitem) %></td>
    <td><%= link_to 'Delete', lineitem, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

