<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
	<%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :order %>
	<%= f.number_field :order %>
  </div>
  <div class="field">
    <%= f.label :statement_type %>
    <%= f.select :statement_type, { "Statement of Activities" => "0", "Statement of Financial Position" => "1" } %>

  </div>
  <div class="field">
    <%= f.label :side %><br />
    <%= f.select :side, { "Debit" => "-1", "Credit" => "1" } %>
  </div>
    
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
